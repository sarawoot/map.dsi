<!DOCTYPE html>
<html>
<head>
  <title>Dsi</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'user', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Static navbar -->
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">DSI Maps</a>
      </div>
      
    </div>
  </nav>

  
  <div class="container">
    <div class="row">
      <div class='col-sm-4 col-sm-offset-4'>
        <% flash.each do |name, msg| %>
          <div class="alert alert-<%= name == :notice ? 'success' : 'danger' %>" id="notice">
            <a class="close" data-dismiss="alert">&otimes;</a>
            <%= msg %>
          </div>
        <% end %>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Login</h3>
          </div>
          <div class="panel-body">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- /container -->

  <%= javascript_include_tag 'user', 'data-turbolinks-track' => true %>
</body>
</html>