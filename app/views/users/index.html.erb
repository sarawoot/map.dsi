
<div class="row">
  <div class="col-sm-6">
    <p class="text-left">
      <%= link_to raw("<i class='glyphicon glyphicon-chevron-left'></i>ย้อนกลับ"), root_path, class: 'btn btn-info' %>
    </p>
  </div>
  <div class="col-sm-6">
    <p class="text-right">
      <%= link_to raw("<i class='glyphicon glyphicon-plus'></i>เพิ่มผู้ใช้งาน"), new_user_path, class: 'btn btn-warning' %>
    </p>
  </div>
  <div class="col-sm-12">
    
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>ชื่อผู้ใช้งาน</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td style="width:40%"><%= user.email %></td>
            <td style="width:20%">
              <%= link_to raw("<i class='glyphicon glyphicon-pencil'></i>"), edit_user_path(user), class: 'btn btn-warning btn-xs' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>






